{
    "manifest_version": 3,
    "name": "Pink Paragraphs",
    "version": "2.0",
    "action": {
        "default_icon": {
            "16": "icon16.png",
            "24": "icon24.png",
            "32": "icon32.png"
        },
        "default_title": "Click to see changes"
    },
    "description": "Changes the background color of every paragraph on a page to pink. Click on the extenxion button on the toolbar to activate.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "author": "SandeepKrSuman",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]

}